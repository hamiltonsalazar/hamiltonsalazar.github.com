{
    "selector": {
        "age": { 
            "$gte": 50
        },
        "address.references": {
            "$elemMatch": {
                "$regex": "calle sin pavi"
            }
        },
        "texts": {
            "$elemMatch": {
                "$regex": "en la ciudad de El Cairo un hombre cansado de trabajar para ganarse el pan"
            }
        }

    },
    "fields": [
        "_id",
        "name",
        "secondName",
        "lastName",
        "secondLastName",
        "age",
        "address",
        "texts"
    ],
    "use_index": "age-texts-address.references-index",
    "execution_stats": true
}